@page "/"
@using IIT_Academica_DTOs
@inject AuthService AuthService
@inject NavigationManager NavigationManager

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
<link href="css/login.css" rel="stylesheet" />

<div class="login-wrapper">

    <div class="login-card shadow-lg">

        <div class="text-center mb-4">
            <h1 class="title">Welcome Back</h1>
            <p class="subtitle">Please enter your credentials to continue</p>
        </div>

        <EditForm Model="@loginDto" OnValidSubmit="HandleLogin">
            <DataAnnotationsValidator />

            @* ------------------- EMAIL INPUT FIELD (ID ADDED) ------------------- *@
            <div class="input-field">
                <label>Email Address</label>
                <InputText id="email-input" 
                           class="modern-input" 
                           @bind-Value="loginDto.Email" />
            </div>

            @* ------------------- PASSWORD INPUT FIELD (ID ADDED) ------------------- *@
            <div class="input-field mt-3">
                <label>Password</label>

                <div class="password-wrapper">

                    <InputText id="password-input" 
                               type="@(showPassword ? "text" : "password")"
                               class="modern-input"
                               @bind-Value="loginDto.Password" />
                    
                    @* Toggle Button (ID ADDED) *@
                    <button id="password-toggle-btn" 
                            type="button" 
                            class="toggle-password" 
                            @onclick="TogglePasswordVisibility">
                        <i class="bi @(showPassword ? "bi-eye-slash" : "bi-eye")"></i>
                    </button>

                </div>
            </div>

            @* ------------------- FORGOT PASSWORD LINK (ID ADDED) ------------------- *@
            <div class="text-end mt-2">
                <a id="forgot-password-link" 
                   href="/auth/forgot-password" 
                   class="forgot-password-link">
                    Forgot Password?
                </a>
            </div>
            
            @* ------------------- ERROR MESSAGE DISPLAY (ID ADDED) ------------------- *@
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div id="login-error-message" 
                     class="alert alert-danger mt-3 text-center">
                    @errorMessage
                </div>
            }

            @* ------------------- LOGIN BUTTON (ID ADDED) ------------------- *@
            <button id="login-submit-btn" 
                    type="submit" 
                    class="btn primary-btn w-100 mt-4" 
                    disabled="@isBusy">
                @if (isBusy)
                {
                    <span class="spinner-border spinner-border-sm me-2"></span>
                }
                Login
            </button>

        </EditForm>
    </div>

</div>

@code {
    private LoginDto loginDto = new();
    private string? errorMessage;
    private bool isBusy = false;

    private bool showPassword = false;
    private void TogglePasswordVisibility() => showPassword = !showPassword;

    private async Task HandleLogin()
    {
        errorMessage = null;
        isBusy = true;

        try
        {
            var auth = await AuthService.Login(loginDto.Email, loginDto.Password);
            if (auth.IsSuccess)
            {
                NavigationManager.NavigateTo(auth.Role switch {
                    "Student" => "/student",
                    "Admin" => "/admin",
                    "Teacher" => "/teacher",
                    _ => "/", // Default path if role is unknown
                }, true, true);
            }
            else
                errorMessage = auth.Errors?.FirstOrDefault() ?? auth.Message;
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isBusy = false;
        }
    }
}