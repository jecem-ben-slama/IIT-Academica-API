@namespace NotificationsFeed
@using IIT_Academica_Front.Models
@using IIT_Academica_Front.Services
@inject NotificationService NotificationService
@inject IJSRuntime JSRuntime

<div class="p-0">
    <h2 class="mb-4 text-primary">ðŸ”” Campus Notification Feed</h2>
    <hr />

    @* --- Loading State --- *@
    @if (IsLoading)
    {
        <div class="text-center p-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Fetching the latest notifications...</p>
        </div>
    }

    @* --- Error State --- *@
    else if (LoadingError != null)
    {
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading">Connection Error</h4>
            <p>Could not load the notification feed. Details: @LoadingError</p>
            <button class="btn btn-sm btn-outline-danger mt-2" @onclick="() => OnRetryLoading.InvokeAsync()">Retry Loading</button>
        </div>
    }

    @* --- Data Display State --- *@
    else if (Notifications == null || !Notifications.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            <i class="bi bi-bell-slash fs-4 me-2"></i>
            No new campus notifications available.
        </div>
    }
    else
    {
        @* ======================================================= *@
        @* --- FEATURED NOTIFICATION: Latest "Emploi" --- *@
        @* ======================================================= *@
        @if (FeaturedNotification != null)
        {
            <div class="mb-4">
                <h3 class="text-danger"><i class="bi bi-pin-angle-fill me-2"></i> Featured Announcement</h3>
                <div class="card border-danger shadow-lg notification-card expanded"> @* Always expanded and highlighted *@
                    
                    @* Card Header *@
                    <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-bullhorn me-2"></i> @FeaturedNotification.Title
                        </h5>
                        <span class="small">
                            @FeaturedNotification.PostedDate.ToShortDateString()
                        </span>
                    </div>

                    @* Card Body (Content) - Always displayed here *@
                    <div class="card-body">
                        
                        @* Display Image if available (using FeaturedImageContent state) *@
                        @if (!string.IsNullOrEmpty(FeaturedNotification.ImageUrl) && !string.IsNullOrEmpty(FeaturedImageContent))
                        {
                            <div class="text-center mb-3">
                                <img src="data:image;base64,@FeaturedImageContent" class="img-fluid rounded" alt="Featured Notification Image" style="max-height: 350px; object-fit: cover;" />
                            </div>
                        }
                        
                        <p class="card-text">@FeaturedNotification.Content</p>

                        @* Download Attached File Button *@
                        @if (!string.IsNullOrEmpty(FeaturedNotification.FileUrl))
                        {
                            <button class="btn btn-sm btn-danger mt-3" 
                                    @onclick="() => DownloadAttachedFile(FeaturedNotification.Id, FeaturedNotification.FileUrl)">
                                <i class="bi bi-file-earmark-arrow-down-fill me-2"></i> 
                                Download Attachment
                            </button>
                        }
                    </div>
                </div>
            </div>
            <hr class="my-4"/>
            <h3 class="mb-3 text-secondary">General Feed</h3>
        }


        @* ======================================================= *@
        @* --- STANDARD NOTIFICATION FEED --- *@
        @* ======================================================= *@
        <div class="row row-cols-1 g-3">
            @foreach (var notification in StandardNotifications.OrderByDescending(n => n.PostedDate))
            {
                <div class="col">
                    <div class="card shadow-sm notification-card @(ExpandedNotificationId == notification.Id ? "expanded" : "")">
                        
                        @* --- Card Header (Clickable for Expansion) --- *@
                        <div class="card-header d-flex justify-content-between align-items-center"
                             @onclick="() => ToggleExpansion(notification.Id)" role="button">
                            
                            <h5 class="mb-0 text-dark">
                                <i class="bi bi-megaphone-fill me-2"></i> @notification.Title
                            </h5>
                            
                            <span class="text-muted small">
                                @notification.PostedDate.ToShortDateString() 
                                <i class="bi @(ExpandedNotificationId == notification.Id ? "bi-chevron-up" : "bi-chevron-down") ms-2"></i>
                            </span>
                        </div>

                        @* --- Collapsible Card Body (Content) --- *@
                        @if (ExpandedNotificationId == notification.Id)
                        {
                            <div class="card-body">
                                
                                @* Display Image if available *@
                                @if (!string.IsNullOrEmpty(notification.ImageUrl) && !string.IsNullOrEmpty(ImageContent))
                                {
                                    <div class="text-center mb-3">
                                        <img src="data:image;base64,@ImageContent" class="img-fluid rounded" alt="Notification Image" style="max-height: 300px; object-fit: cover;" />
                                    </div>
                                }
                                
                                <p class="card-text">@notification.Content</p>

                                @* Download Attached File Button *@
                                @if (!string.IsNullOrEmpty(notification.FileUrl))
                                {
                                    <button class="btn btn-sm btn-outline-primary mt-3" 
                                            @onclick="() => DownloadAttachedFile(notification.Id, notification.FileUrl)">
                                        <i class="bi bi-file-earmark-arrow-down-fill me-2"></i> 
                                        Download Attachment
                                    </button>
                                }
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    // --- Component Parameters (To receive data from parent) ---
    [Parameter]
    public List<NotificationDto>? Notifications { get; set; }
    
    [Parameter]
    public bool IsLoading { get; set; } = true;

    [Parameter]
    public string? LoadingError { get; set; }

    [Parameter]
    public EventCallback OnRetryLoading { get; set; }

    // --- Component Internal State ---
    
    // State for standard collapsible cards
    private int? ExpandedNotificationId { get; set; }
    private string ImageContent = string.Empty;
    
    // State for featured notification (isolated)
    private NotificationDto? FeaturedNotification { get; set; } // <-- NEW
    private string FeaturedImageContent = string.Empty; // <-- NEW
    private List<NotificationDto> StandardNotifications { get; set; } = new(); // <-- NEW

    private bool _notificationsProcessed = false; 

    // --- Lifecycle Method for Initialization Logic ---
    protected override async Task OnParametersSetAsync()
    {
        // Check if notifications have just been received/updated and haven't been processed yet
        if (Notifications != null && !_notificationsProcessed)
        {
            _notificationsProcessed = true;
            await ProcessNotificationsForFeaturedView();
        }
        else if (Notifications == null)
        {
            // Reset state if notifications become null (e.g., due to loading error)
            _notificationsProcessed = false;
            FeaturedNotification = null;
            StandardNotifications.Clear();
            FeaturedImageContent = string.Empty;
            ImageContent = string.Empty;
            ExpandedNotificationId = null;
        }
    }

    /// <summary>
    /// Finds the latest notification with "emploi" in the title, isolates it as the featured notification,
    /// and separates the rest into the standard list.
    /// </summary>
    private async Task ProcessNotificationsForFeaturedView()
    {
        if (Notifications == null || !Notifications.Any())
        {
            FeaturedNotification = null;
            StandardNotifications.Clear();
            return;
        }

        // 1. Find the latest notification containing "emploi" in the title (case-insensitive)
        var latestEmploi = Notifications
            .OrderByDescending(n => n.PostedDate)
            .FirstOrDefault(n => n.Title.Contains("emploi", StringComparison.OrdinalIgnoreCase));

        if (latestEmploi != null)
        {
            FeaturedNotification = latestEmploi;

            // 2. Filter the main list to contain all OTHER notifications
            StandardNotifications = Notifications
                .Where(n => n.Id != FeaturedNotification.Id)
                .ToList();

            // 3. Load the image for the Featured Notification if available
            if (!string.IsNullOrEmpty(FeaturedNotification.ImageUrl))
            {
                await LoadFeaturedImageAsync(FeaturedNotification.Id);
            }
        }
        else
        {
            // No featured notification, so all notifications go to the standard list
            FeaturedNotification = null;
            StandardNotifications = Notifications;
        }
    }

    // --- Expansion Logic (Only for Standard Notifications) ---
    private async Task ToggleExpansion(int notificationId)
    {
        // If the same notification is clicked, collapse it.
        if (ExpandedNotificationId == notificationId)
        {
            ExpandedNotificationId = null;
            ImageContent = string.Empty;
        }
        // If a new notification is clicked, expand it and load its image.
        else
        {
            ExpandedNotificationId = notificationId;
            var notification = StandardNotifications.FirstOrDefault(n => n.Id == notificationId);
            if (notification != null && !string.IsNullOrEmpty(notification.ImageUrl))
            {
                await LoadStandardImageAsync(notificationId);
            }
            else
            {
                ImageContent = string.Empty;
            }
        }
    }
    
    // --- Image Loading Logic for Featured Notification ---
    private async Task LoadFeaturedImageAsync(int notificationId)
    {
        try
        {
            var response = await NotificationService.DownloadNotificationImageAsync(notificationId);
            response.EnsureSuccessStatusCode();

            using var stream = await response.Content.ReadAsStreamAsync();
            using var memoryStream = new MemoryStream();
            await stream.CopyToAsync(memoryStream);
            
            // Set the Base64 content for the featured image
            FeaturedImageContent = Convert.ToBase64String(memoryStream.ToArray());
        }
        catch (Exception ex)
        {
            FeaturedImageContent = string.Empty;
            await JSRuntime.InvokeVoidAsync("console.error", $"Failed to load featured image: {ex.Message}");
        }
    }

    // --- Image Loading Logic for Standard Notifications ---
    private async Task LoadStandardImageAsync(int notificationId)
    {
        try
        {
            var response = await NotificationService.DownloadNotificationImageAsync(notificationId);
            response.EnsureSuccessStatusCode();

            using var stream = await response.Content.ReadAsStreamAsync();
            using var memoryStream = new MemoryStream();
            await stream.CopyToAsync(memoryStream);
            
            // Set the Base64 content for the standard image
            ImageContent = Convert.ToBase64String(memoryStream.ToArray());
        }
        catch (Exception ex)
        {
            ImageContent = string.Empty;
            await JSRuntime.InvokeVoidAsync("console.error", $"Failed to load notification image: {ex.Message}");
        }
    }


    // --- Download Logic (Shared for both featured and standard) ---
    private async Task DownloadAttachedFile(int notificationId, string fileNameHint)
    {
        try
        {
            var response = await NotificationService.DownloadNotificationFileAsync(notificationId);
            response.EnsureSuccessStatusCode();

            using var stream = await response.Content.ReadAsStreamAsync();
            
            var fileName = response.Content.Headers.ContentDisposition?.FileNameStar
                ?? response.Content.Headers.ContentDisposition?.FileName
                ?? fileNameHint;

            var contentType = response.Content.Headers.ContentType?.MediaType ?? "application/octet-stream";

            // Assumes 'BlazorDownloadFile' JS function is available
            await JSRuntime.InvokeVoidAsync("BlazorDownloadFile", fileName, contentType, stream);
        }
        catch (HttpRequestException ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Download failed: {ex.Message}");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"An error occurred during download: {ex.Message}");
        }
    }
}