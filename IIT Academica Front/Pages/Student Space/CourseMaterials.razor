@page "/student/materials/{SubjectId:int}"

@using IIT_Academica_Front.Models
@using IIT_Academica_Front.Services
@inject CourseMaterialService MaterialService
@inject IJSRuntime JSRuntime
@inject NavigationManager Navigation

<div class="container p-4">

    <div class="d-flex justify-content-between align-items-center mb-5 pb-3 border-bottom">
        @* ------------------- Title ------------------- *@
        <h2 id="materials-page-title" class="fw-bold text-primary">
            <i class="bi bi-journal-check me-2"></i> Course Materials for @SubjectName
        </h2>
        @* ------------------- Back Button ------------------- *@
        <button id="back-to-courses-btn" class="btn btn-outline-secondary" @onclick="GoBack">
            <i class="bi bi-arrow-left me-2"></i> Back to Courses
        </button>
    </div>

    @* ------------------- Loading State ------------------- *@
    @if (IsLoading)
    {
        <div id="loading-state" class="text-center p-5 border rounded-3 bg-light">
            <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3 fs-5 text-muted">Loading course materials...</p>
        </div>
    }

    @* ------------------- Error State ------------------- *@
    else if (LoadingError != null)
    {
        <div id="error-state" class="alert alert-danger p-4 shadow-sm" role="alert">
            <h4 class="alert-heading d-flex align-items-center"><i class="bi bi-x-octagon-fill me-2"></i> Loading Failed!</h4>
            <p>Could not load materials for the subject. Details: **@LoadingError**</p>
            <hr>
            @* ------------------- Retry Button ------------------- *@
            <button id="retry-load-btn" class="btn btn-sm btn-danger mt-2" @onclick="LoadMaterialsAsync"><i class="bi bi-arrow-clockwise me-1"></i> Retry</button>
        </div>
    }

    @* ------------------- Empty Data State ------------------- *@
    else if (Materials == null || Materials.Count == 0)
    {
        <div id="no-materials-state" class="alert alert-info text-center p-4 shadow-sm" role="alert">
            <i class="bi bi-info-circle fs-3 d-block mb-2"></i>
            <h5 class="alert-heading">No Materials Available</h5>
            <p class="mb-0">There are no course materials available for this subject yet.</p>
        </div>
    }
    else
    {
        @* ------------------- Materials List Container ------------------- *@
        <div id="materials-list-container" class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var material in Materials)
            {
                <div class="col">
                    @* ------------------- Material Card ------------------- *@
                    <div id="material-card-@material.Id" class="material-card h-100 shadow-sm border-primary">
                        <div class="card-body d-flex flex-column">
                            @* ------------------- Material Title ------------------- *@
                            <h5 id="material-title-@material.Id" class="card-title text-primary fw-bold">
                                <i class="bi bi-file-earmark-text me-2"></i> @material.Title
                            </h5>
                            <h6 class="card-subtitle mb-3 text-muted">Uploaded: @material.UploadDate.ToShortDateString()</h6>
                            <p class="card-text flex-grow-1 text-secondary">@material.Description</p>
                            
                            <div class="mt-auto pt-3 download-button-group">
                                @* ------------------- Download Button ------------------- *@
                                <button id="download-btn-@material.Id" class="btn btn-success w-100" 
                                        @onclick="() => DownloadMaterial(material)"
                                        disabled="@(DownloadingMaterialId.HasValue)"> @* Disable all buttons if any download is active *@

                                    @if (material.Id == DownloadingMaterialId)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                        <span class="fw-bold">Downloading...</span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-download me-2">Download File</i> 
                                    }
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

</div>

@code {
    [Parameter]
    public int SubjectId { get; set; }

    // --- State Management ---
    private List<CourseMaterialDto>? Materials { get; set; }
    private string SubjectName { get; set; } = "Subject"; 
    private bool IsLoading { get; set; } = true;
    private string? LoadingError { get; set; }
    private int? DownloadingMaterialId { get; set; } 

    // --- Lifecycle ---

    protected override async Task OnInitializedAsync()
    {
        await LoadMaterialsAsync();
    }

    // --- Data Loading Logic ---

    private async Task LoadMaterialsAsync()
    {
        IsLoading = true;
        LoadingError = null;
        Materials = null;
        try
        {
            Materials = await MaterialService.GetMaterialsBySubjectAsync(SubjectId);
            
            // NOTE: If you fetch subject data separately, update SubjectName here:
            // if (Materials != null && Materials.Any())
            // {
            //     SubjectName = Materials.First().SubjectName; // Example
            // }
        }
        catch (HttpRequestException ex)
        {
            LoadingError = ex.Message;
        }
        catch (Exception ex)
        {
            LoadingError = $"An unexpected error occurred: {ex.Message}";
        }
        finally
        {
            IsLoading = false;
        }
    }

    // --- Download Logic: Updated to use DotNetStreamReference and JS Interop ---

    private async Task DownloadMaterial(CourseMaterialDto material)
    {
        if (DownloadingMaterialId.HasValue) return;

        DownloadingMaterialId = material.Id;
        StateHasChanged();

        try
        {
            // 1. Call the service to get the secure download response
            // We assume DownloadMaterialAsync uses HttpCompletionOption.ResponseHeadersRead for streaming.
            using var response = await MaterialService.DownloadMaterialAsync(material.Id);

            // Check if the server returned a success status (e.g., 200 OK)
            response.EnsureSuccessStatusCode(); 

            // 2. Read the file stream directly from the response content
            using var stream = await response.Content.ReadAsStreamAsync();
            
            // 3. Extract the file name from Content-Disposition header (Backend MUST set this)
            string fileName = response.Content.Headers.ContentDisposition?.FileNameStar
                ?? response.Content.Headers.ContentDisposition?.FileName
                ?? $"{material.Title}.dat"; // Fallback with a generic extension

            // Remove quotes if present
            fileName = fileName.Trim('"');
            
            // 4. Create a DotNetStreamReference to pass the stream to JavaScript
            using var streamRef = new DotNetStreamReference(stream);
            
            // 5. Invoke the new JavaScript function to handle the download
            // The JS function will read the stream, create a Blob, and trigger the save dialog.
            await JSRuntime.InvokeVoidAsync("downloadFileFromStream", fileName, streamRef);
        }
        catch (HttpRequestException ex)
        {
            // Handle errors like 403 Forbidden (Not Enrolled) or 404 Not Found
            await JSRuntime.InvokeVoidAsync("alert", $"Download failed. Check access permissions or file availability. Details: {ex.Message}");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"An error occurred during download: {ex.Message}");
        }
        finally
        {
            DownloadingMaterialId = null;
            StateHasChanged();
        }
    }

    // --- Navigation Logic ---

    private void GoBack()
    {
        Navigation.NavigateTo("/student");
    }
}