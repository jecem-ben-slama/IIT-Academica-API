<div class="row mb-5">
    <div class="col-12 d-flex justify-content-center flex-wrap gap-4">
        @foreach (var btn in Buttons)
        {
            <button class="btn @btn.CssClass action-rect-btn d-flex align-items-center gap-2 @(SelectedRole == btn.Role ? btn.ActiveClass : "")"
                    @onclick="@(() => OnSelectRole.InvokeAsync(btn.Role))" title="@btn.Title">
                <i class="@btn.Icon fs-4"></i>
                <span>@btn.Title</span>
            </button>
        }
    </div>
</div>

@code {
    [Parameter] public string SelectedRole { get; set; } = string.Empty;
    [Parameter] public EventCallback<string> OnSelectRole { get; set; }

    private List<(string Role, string Title, string Icon, string CssClass, string ActiveClass)> Buttons => new()
    {
        ("", "Users", "bi bi-people-fill", "btn-secondary", "action-active-secondary"),
        ("Subjects", "Subjects", "bi bi-book", "btn-info text-white", "action-active-info"),
        ("Notifications", "Notifications", "bi bi-bell-fill", "btn-warning", "action-active-warning")
    };
}
