@inherits LayoutComponentBase
@inject NavigationManager NavigationManager
@inject AuthService AuthService

<div class="d-flex" id="wrapper">
    
   
    @* --- 2. Page Content Wrapper (Includes Topbar) --- *@
    <div id="page-content-wrapper" class="flex-grow-1">
        
        @* === A. Custom Admin Top Navbar (Your requested element) === *@
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand text-primary fw-bold fs-4" href="/admin">
                    IIT ACADEMICA
                </a>

                <div class="d-flex">
                    <a href="/admin/settings" class="btn btn-outline-secondary me-2">
                        <i class="bi bi-gear-fill"></i> Settings
                    </a>
                    
                    <button class="btn btn-danger" @onclick="HandleLogout">
                    Logout
                        <i class="bi bi-box-arrow-right"></i>
                    </button>
                </div>
            </div>
        </nav>
        
        @* === B. Placeholder for Page Content (e.g., Admin.razor, AdminUsers.razor) === *@
        <div class="container-fluid p-4">
            @Body
        </div>
    </div>
</div>

@code {
    private async Task HandleLogout()
    {
        await AuthService.Logout();
        // Redirect and force full reload to reset authentication state
        NavigationManager.NavigateTo("/", true,true);
    }
}